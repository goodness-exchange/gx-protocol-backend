{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gx-protocol.com/schemas/genesis-distribution-event.v1.json",
  "title": "GenesisDistributionEvent v1.0",
  "description": "Emitted when GX tokens are distributed to a user during the genesis allocation phase. Distribution is tiered based on age groups and nationality.",
  "type": "object",

  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventName": {
      "type": "string",
      "const": "GenesisDistributionEvent",
      "description": "Event type identifier"
    },
    "eventVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version of this event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "blockNumber": {
      "type": "integer",
      "minimum": 0,
      "description": "Fabric block number where this transaction was committed"
    },
    "txId": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric transaction ID"
    },
    "chaincodeName": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the chaincode that emitted this event"
    },
    "channelName": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric channel name"
    },
    "payload": {
      "type": "object",
      "description": "Genesis token distribution data from chaincode",
      "properties": {
        "userID": {
          "type": "string",
          "minLength": 1,
          "description": "User ID receiving the genesis allocation"
        },
        "amount": {
          "type": "integer",
          "minimum": 0,
          "description": "Amount of GX tokens distributed in Qirat (smallest unit)"
        },
        "phase": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "description": "Genesis phase number (1-6)"
        },
        "age": {
          "type": "integer",
          "minimum": 0,
          "maximum": 150,
          "description": "User's age at time of distribution"
        },
        "eligible": {
          "type": "boolean",
          "description": "Whether user was eligible for genesis distribution"
        },
        "nationality": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "description": "User's nationality (ISO 3166-1 alpha-2 country code)"
        },
        "poolSource": {
          "type": "string",
          "const": "SYSTEM_USER_GENESIS_POOL",
          "description": "Source pool for the genesis distribution"
        }
      },
      "required": [
        "userID",
        "amount",
        "phase",
        "age",
        "eligible",
        "nationality",
        "poolSource"
      ],
      "additionalProperties": false
    }
  },

  "required": [
    "eventId",
    "eventName",
    "eventVersion",
    "timestamp",
    "blockNumber",
    "txId",
    "chaincodeName",
    "channelName",
    "payload"
  ],

  "additionalProperties": false
}
