{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gx-protocol.com/schemas/internal-transfer-event.v1.json",
  "title": "InternalTransferEvent v1.0",
  "description": "Emitted for internal system transfers such as genesis minting, tax collection, loan disbursement, and fee redistribution. Includes transaction type and remark for audit trail.",
  "type": "object",

  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventName": {
      "type": "string",
      "const": "InternalTransferEvent",
      "description": "Event type identifier"
    },
    "eventVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version of this event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "blockNumber": {
      "type": "integer",
      "minimum": 0,
      "description": "Fabric block number where this transaction was committed"
    },
    "txId": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric transaction ID"
    },
    "chaincodeName": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the chaincode that emitted this event"
    },
    "channelName": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric channel name"
    },
    "payload": {
      "type": "object",
      "description": "Internal transfer data from chaincode",
      "properties": {
        "fromID": {
          "type": "string",
          "minLength": 1,
          "description": "Source account ID"
        },
        "toID": {
          "type": "string",
          "minLength": 1,
          "description": "Destination account ID"
        },
        "amount": {
          "type": "integer",
          "minimum": 0,
          "description": "Amount transferred in Qirat"
        },
        "type": {
          "type": "string",
          "enum": ["GENESIS_MINT", "VELOCITY_TAX", "LOAN_DISBURSEMENT", "FEE_COLLECTION", "FEE_REDISTRIBUTION", "SYSTEM_ADJUSTMENT"],
          "description": "Type of internal transfer"
        },
        "remark": {
          "type": "string",
          "minLength": 1,
          "description": "Additional context or reason for the transfer"
        }
      },
      "required": [
        "fromID",
        "toID",
        "amount",
        "type",
        "remark"
      ],
      "additionalProperties": false
    }
  },

  "required": [
    "eventId",
    "eventName",
    "eventVersion",
    "timestamp",
    "blockNumber",
    "txId",
    "chaincodeName",
    "channelName",
    "payload"
  ],

  "additionalProperties": false
}
