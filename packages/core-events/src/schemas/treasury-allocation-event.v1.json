{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gx-protocol.com/schemas/treasury-allocation-event.v1.json",
  "title": "TreasuryAllocationEvent v1.0",
  "description": "Emitted when GX tokens are allocated to a national treasury account during genesis phase. Treasuries receive government allocations based on country population.",
  "type": "object",

  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventName": {
      "type": "string",
      "const": "TreasuryAllocationEvent",
      "description": "Event type identifier"
    },
    "eventVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version of this event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "blockNumber": {
      "type": "integer",
      "minimum": 0,
      "description": "Fabric block number where this transaction was committed"
    },
    "txId": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric transaction ID"
    },
    "chaincodeName": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the chaincode that emitted this event"
    },
    "channelName": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric channel name"
    },
    "payload": {
      "type": "object",
      "description": "Treasury allocation data from chaincode",
      "properties": {
        "treasuryID": {
          "type": "string",
          "pattern": "^treasury_[A-Z]{2}$",
          "description": "Treasury account ID in format treasury_XX (e.g., treasury_US)"
        },
        "amount": {
          "type": "integer",
          "minimum": 0,
          "description": "Amount of GX tokens allocated in Qirat (smallest unit)"
        },
        "phase": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "description": "Genesis phase number (1-6)"
        },
        "nationality": {
          "type": "string",
          "pattern": "^[A-Z]{2}$",
          "description": "Country code for the treasury (ISO 3166-1 alpha-2)"
        },
        "poolSource": {
          "type": "string",
          "const": "SYSTEM_GOVT_GENESIS_POOL",
          "description": "Source pool for the treasury allocation"
        }
      },
      "required": [
        "treasuryID",
        "amount",
        "phase",
        "nationality",
        "poolSource"
      ],
      "additionalProperties": false
    }
  },

  "required": [
    "eventId",
    "eventName",
    "eventVersion",
    "timestamp",
    "blockNumber",
    "txId",
    "chaincodeName",
    "channelName",
    "payload"
  ],

  "additionalProperties": false
}
