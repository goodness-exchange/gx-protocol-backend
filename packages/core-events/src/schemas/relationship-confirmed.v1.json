{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://gx-protocol.com/schemas/relationship-confirmed.v1.json",
  "title": "RelationshipConfirmed Event v1.0",
  "description": "Emitted when a user confirms a pending relationship request. The relationship is now active and bidirectional.",
  "type": "object",

  "properties": {
    "eventId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this event instance"
    },
    "eventName": {
      "type": "string",
      "const": "RelationshipConfirmed",
      "description": "Event type identifier"
    },
    "eventVersion": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version of this event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the event occurred"
    },
    "blockNumber": {
      "type": "integer",
      "minimum": 0,
      "description": "Fabric block number where this transaction was committed"
    },
    "txId": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric transaction ID"
    },
    "chaincodeName": {
      "type": "string",
      "minLength": 1,
      "description": "Name of the chaincode that emitted this event"
    },
    "channelName": {
      "type": "string",
      "minLength": 1,
      "description": "Fabric channel name"
    },
    "payload": {
      "type": "object",
      "description": "Relationship confirmation data from chaincode",
      "properties": {
        "relationshipID": {
          "type": "string",
          "minLength": 1,
          "description": "Unique identifier for the relationship"
        },
        "subjectID": {
          "type": "string",
          "minLength": 1,
          "description": "User ID of the relationship requester"
        },
        "objectID": {
          "type": "string",
          "minLength": 1,
          "description": "User ID of the user confirming the relationship"
        },
        "type": {
          "type": "string",
          "enum": ["FRIEND_OF", "PARENT_OF", "CHILD_OF", "GUARDIAN_OF", "WARD_OF", "SPOUSE_OF", "SIBLING_OF", "BUSINESS_PARTNER_OF", "EMPLOYEE_OF", "EMPLOYER_OF"],
          "description": "Type of relationship"
        },
        "status": {
          "type": "string",
          "const": "Confirmed",
          "description": "Status of the relationship (always Confirmed after confirmation)"
        },
        "timestamp": {
          "type": "integer",
          "minimum": 0,
          "description": "Unix timestamp (seconds) when relationship was confirmed"
        }
      },
      "required": [
        "relationshipID",
        "subjectID",
        "objectID",
        "type",
        "status",
        "timestamp"
      ],
      "additionalProperties": false
    }
  },

  "required": [
    "eventId",
    "eventName",
    "eventVersion",
    "timestamp",
    "blockNumber",
    "txId",
    "chaincodeName",
    "channelName",
    "payload"
  ],

  "additionalProperties": false
}
